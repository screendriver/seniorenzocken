{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"dependencyDashboard": true,
	"labels": ["renovate"],
	"lockFileMaintenance": {
		"enabled": true,
		"automerge": true
	},
	"packageRules": [
		{
			"matchPackageNames": ["node"],
			"matchManagers": ["dockerfile"],
			"enabled": false
		},
		{
			"groupName": "Nuxt dependencies",
			"groupSlug": "nuxt-dependencies",
			"matchPackageNames": ["@nuxt?(js)/*", "@*/nuxt", "nuxt", "nuxt-*"]
		},
		{
			"groupName": "Pinia dependencies",
			"groupSlug": "pinia",
			"matchPackageNames": ["@pinia/*", "pinia"]
		},
		{
			"matchDepTypes": ["dependencies", "devDependencies"],
			"matchUpdateTypes": ["minor", "patch"],
			"automerge": true,
			"automergeType": "branch"
		}
	],
	"regexManagers": [
		{
			"fileMatch": ["^Dockerfile$"],
			"matchStrings": ["FROM node:(?<currentValue>.*?)-alpine", "FROM node:(?<currentValue>.*?)\\s"],
			"depNameTemplate": "node",
			"datasourceTemplate": "node",
			"versioningTemplate": "node"
		}
	]
}
